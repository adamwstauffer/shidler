    "voice": {
      "personality": "Institutional, inclusive, pride of place. Reflects quality and supports the university's mission, vision, and institutional goals.",
      "tone": "Professional, clear, accessible. Communicates internally and externally with consistency.",
      "avoid": "Non–ADA compliant contrast; red type for body; overly dark layouts; custom palettes or gradients not in brand"
    }
  },
  "designPrinciples": {
    "core": [
      {
        "name": "Brand Consistency",
        "description": "Every element should reinforce UH Mānoa's shared identity. Use approved logos, typography, and colors so that all touchpoints feel recognizably UH."
      },
      {
        "name": "Accessibility",
        "description": "Meet ADA accessibility in contrast, type size, and layout. Never use non-compliant contrast colors, red body type, or layouts that are too dark for readability."
      },
      {
        "name": "Quality and Legibility",
        "description": "Typography and layout should reflect institutional quality. Use generous leading, readable body sizes (e.g., 11–12 pt for older audiences), and legible typefaces."
      },
      {
        "name": "Pride of Place",
        "description": "Design supports the university's mission and creates pride in place. Visual language should feel cohesive across print, web, and digital assets."
      }
    ],
    "resources": {
      "brandFoundation": "https://manoa.hawaii.edu/brand/brand-foundation/index.php",
      "brandLanguage": "https://manoa.hawaii.edu/brand/brand-language/index.php",
      "brandDesign": "https://manoa.hawaii.edu/brand/brand-elements/index.php",
      "brandResources": "https://manoa.hawaii.edu/brand/brand-resources.php"
    }
  },
